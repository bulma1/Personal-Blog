<%- include('./partials/head') %>
<%- include('./partials/header') %>

<article>
  <h1><%= frontmatter.title %></h1>
  <div class="post-meta">
    <span class="post-date"><%= new Date(frontmatter.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
    <span class="post-author">By <%= frontmatter.author %></span>
  </div>
  
  <div class="post-content">
    <%- content %>
  </div>

  <% if (frontmatter.tags && frontmatter.tags.length > 0) { %>
    <div class="tags">
      <% frontmatter.tags.forEach(tag => { %>
        <span class="tag">#<%= tag %></span>
      <% }) %>
    </div>
  <% } %>

  <% if (frontmatter.categories && frontmatter.categories.length > 0) { %>
    <div class="categories">
      <% frontmatter.categories.forEach(category => { %>
        <a href="/category/<%= category.toLowerCase() %>" class="category-link"><%= category %></a>
      <% }) %>
    </div>
  <% } %>
</article>

<%- include('./partials/footer') %>